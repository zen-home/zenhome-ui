{
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  "editor.codeActionsOnSave": [
    "source.fixAll.eslint"
  ],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "vue"
  ],
  "[shellscript]": {
    "editor.defaultFormatter": "1nVitr0.blocksort"
  },
  "js/ts.implicitProjectConfig.checkJs": true,
  "javascript.suggest.completeJSDocs": true,
  "javascript.validate.enable": true,
  "javascript.suggest.jsdoc.generateReturns": true,
  "typescript.suggest.jsdoc.generateReturns": true,
  "typescript.suggest.completeJSDocs": true,
  "editor.suggest.showWords": true,
  "editor.autoClosingBrackets": "languageDefined",
  "[javascript]": {
    "editor.autoClosingBrackets": "languageDefined"
  },
  "[typescript]": {
    "editor.autoClosingBrackets": "languageDefined"
  },
  "sonarlint.connectedMode.project": {
    "connectionId": "http://localhost:2348",
    "projectKey": "zenhome"
  },
  "files.exclude": {
    "node_modules/robots-parser/**/node_modules": true,
    "node_modules/robots-parser/**/coverage": true,
    "node_modules/robots-parser/**/.nyc_output": true,
    "node_modules/robots-parser/**/.vscode": true,
    ".husky/_/**/*": true
  },
  "[dockercompose]": {
    "editor.defaultFormatter": "1nVitr0.blocksort"
  },
  "livePreview.defaultPreviewPath": "/docs/index.html",
  "[html]": {
    "editor.defaultFormatter": "1nVitr0.blocksort"
  },
}
